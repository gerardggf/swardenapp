rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['uid', 'email', 'salt', 'dekBox'])
        && request.resource.data.uid == userId
        && request.resource.data.email is string
        && request.resource.data.salt is string
        && request.resource.data.dekBox is string;
      
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['uid', 'email', 'salt', 'dekBox'])
        && request.resource.data.uid == userId
        && request.resource.data.email is string
        && request.resource.data.salt is string
        && request.resource.data.dekBox is string;
    }
    
    match /users/{userId}/entries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['id', 'data'])
        && request.resource.data.id is string
        && request.resource.data.data is string
        && request.resource.data.id.size() > 0
        && request.resource.data.data.size() > 0;
      
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['id', 'data'])
        && request.resource.data.id is string
        && request.resource.data.data is string
        && request.resource.data.id.size() > 0
        && request.resource.data.data.size() > 0;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}